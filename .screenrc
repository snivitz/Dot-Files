defutf8 on
utf8 on on
startup_message off
term "screen-256color"

# Enables GNU Screen for Solarized colors.
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E38;5;%dm'
defbce "on"

screen -t zsh			0 zsh
screen -t rainbowstream		2 rainbowstream
screen -t elinks 		9 /usr/local/bin/elinks

